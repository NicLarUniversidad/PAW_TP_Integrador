{% extends "parts/commons.twig" %}

{% block head %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="css/detalleproducto.css" />
{% endblock %}

{% block main %}
<img src="img/arrow_back-24px.svg"  class="flecha-back" id="flecha" border="0" onclick="history.back();">
<h1 class="detalle">Detalles del producto</h1>
        <section class="detalleDescrip">
            {% for publicacion in data.publicaciones %}
                <article>
                    <h2>{{ publicacion.producto.nombre }}</h2>
                    <p>{{ publicacion.producto.descripcion }}</p>
                    <p>{{ publicacion.precio_unidad }} {{ publicacion.moneda.nombre }}</p>
                    <a class="agregar">Agregar</a>
                </article>
            {% endfor %}
        </section>  

        {{dump(data.publicacion)}}

{% endblock %}

{% block footer %}
    <section  class="footer">
        <img src="img/camion.png"  class="camion">
        <p>Envío GRATIS a Capital Federal</p>
    </section>
    <section class="footer">
        <img src="img/tienda.png"  class="tienda">
        <p>Entrega estimada 8 días hábiles</p>
    </section>
{% endblock %}

