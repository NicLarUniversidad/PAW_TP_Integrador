{% extends "parts/commons.twig" %}


{% block head %}
    <link rel="stylesheet" type="text/css" href="css/detalle-compra.css" />
{% endblock %}

{% block main %}

    <section>
        <h2>Detalle compra</h2>
        {% for item in data.compras %}
            <h3>  {{ item.publicacion.producto.nombre }}</h3>
            <article class="compra" id="compra-{{ item.id }}">
                <p>Descripci√≥n: {{ item.publicacion.producto.descripcion }}</p>
                <p>Costo: {{ item.monto }} </p>
            </article>

        {% else %}
            <span class="sin-compras">No han encontrado productos asociados a esta compra</span>
        {% endfor %}
    </section>
{% endblock %}