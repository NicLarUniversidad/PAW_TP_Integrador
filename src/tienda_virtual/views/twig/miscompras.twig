{% extends "parts/commons.twig" %}
{% block head %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="css/miscompras.css" />
{% endblock %}

{% block main %}

    <section>
        <img src="img/arrow_back-24px.svg"  class="flecha-back" id="flecha" onclick="history.back();">
        <h1>Historial de compras</h1>
        {% for publicacion in data.publicaciones %}
            <article>
                <h2>{{ publicacion.producto.nombre }}</h2>
                <p>{{ publicacion.precio_unidad }} {{ publicacion.moneda.nombre }}</p>
                <p class="estado" id="estado_impaga">{{ compra_impaga.estado }}</p>
                <p class="estado" id="estado_pagada">{{ compra_impaga.compra_pagado.estado }}</p>
                <p class="estado" id="estado_enviada">{{ compra_impaga.compra_pagado.compra_enviada.estado }}</p>
                <a href="/detalleproducto?publicacion={{ publicacion.id }}" id="verMas">Ver en Detalle</a><br>
                {% for foto in publicacion.fotografias %}
                    <picture>
                        <img src="{{ foto.url }}" alt="{{ publicacion.producto.descripcion }}">
                    </picture>
                {% endfor %}
            </article>
        {% endfor %}
    </section>

{% endblock %}