{% extends "parts/commons.twig" %}

{% block head %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="css/categorias.css" />
{% endblock %}

{% block main %}
<h1>Categorias Generales</h1>

      {% for grupo_categoria in data.grupo_categorias %} 
       
        <a class="categorias" href="/categorias" title="{{grupo_categoria.descripcion}}">{{grupo_categoria.descripcion}}</a>
