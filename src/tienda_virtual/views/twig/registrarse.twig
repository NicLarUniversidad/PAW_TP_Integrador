{% block head %}
    <script src="https://www.mercadopago.com/v2/security.js" view="item"></script>
    <link rel="stylesheet" type="text/css" href="css/registro.css" />
    <script src="/js/scripts/carrito.js" ></script>
{% endblock %}

{% block main %}

  <section>
      <img src="img/arrow_back-24px.svg"  class="flecha-back" id="flecha" onclick="history.back();">
      <h1>Registro</h1>
    {% if data %}

        <h2>Login {{attribute(data,"usuario")}}</h2>
      {% endif %}
      <img src="img/new-users.svg" class="newUsers">
        <form method="post" action="/registrarse">
            <div>
            <label for="username">Usuario:</label>
            <input type="text" name="username" id="username" required>
            </div>
            <div>
            <label for="password">Contraseña:</label>
            <input type="password" name="password" id="password" required>
            </div>
            <div>
            <label for="re-password">Reingresar contraseña:</label>
            <input type="password" name="re-password" id="re-password" required>
            </div>
            <div>
            <label for="mail">Mail:</label>
            <input type="email" name="mail" id="mail">
            </div>
            <div>
            <label for="nombre">Nombre:</label>
            <input type="text" name="nombre" id="nombre">
            </div>
            <div>
            <label for="apellido">Apellido:</label>
            <input type="text" name="apellido" id="apellido">
            </div>
            <button type="submit" class="botonRegistro">Registrarse</button>
        </form>
        <a href="/login" class="botonRegistro">Login</a>
    </section>
    
{% endblock %}


