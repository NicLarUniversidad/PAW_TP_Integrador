{% block head %}
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="css/buscador.css" />
{% endblock %}

{% block main %}
  
    <section>
    <img src="img/arrow_back-24px.svg"  class="flecha-back" id="flecha" border="0" onclick="history.back();">
        <h1>Resultados de la b√∫squeda</h1>
    {% for publicacion in data.publicaciones %}
        <article>
            <h2>{{ publicacion.producto.nombre }}</h2>
            <p>{{ publicacion.precio_unidad }} {{ publicacion.moneda.nombre }}</p>
            <th><a href="/detalleproducto?producto={{ publicacion.producto.id }}" id="verMas">Ver en Detalle</a></th><br>
            {% for foto in publicacion.fotografias %}
            <picture>
                <img src="{{ foto.url }}" alt="{{ publicacion.producto.descripcion }}">
            </picture>
            {% endfor %}
        </article>
    {% endfor %}
    </section>

{% endblock %}